@model ML.Usuario
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @Html.ActionLink("<= Regresar", "GetAll", "Usuario", new { @class = "btn btn-danger" })
            </div>
            <div class="col-md-6 alert alert-primary" role="alert">
                Registro de usuario
            </div>
            <div class="col-md-3"></div>
        </div>
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.UserName)
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Nombre)
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.ApellidoPaterno)
                    @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.ApellidoMaterno)
                    @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Password)
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Sexo)
                    @{
                        var sexos = new List<SelectListItem>
                                        {
                            new SelectListItem { Text = "Hombre", Value = "H" },
                            new SelectListItem { Text = "Mujer", Value = "M" }
                        };
                    }
                    @Html.DropDownListFor(model => model.Sexo, sexos, "Selecciona tu sexo", htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Telefono)
                    @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Celular)
                    @Html.TextBoxFor(model => model.Celular, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.FechaNacimiento)
                    @Html.TextBoxFor(model => model.FechaNacimiento, new { @type = "date", @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.CURP)
                    @Html.TextBoxFor(model => model.CURP, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Rol)
                    @{
                        var roles = new List<SelectListItem>
                                                {
                            new SelectListItem { Text = "Administrador", Value = "1" },
                            new SelectListItem { Text = "Analista", Value = "2" },
                            new SelectListItem { Text = "Desarrollador", Value = "3" }
                        };
                    }
                    @Html.DropDownListFor(model => model.Rol.IdRol, roles, "Selecciona un rol", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
                <div class="col-md-3"></div>
            </div>
        }
        @if (ViewBag.MensajeAdd != null)
        {
            <div class="alert alert-info">
                @ViewBag.MensajeAdd
            </div>
        }

    </div>
}


